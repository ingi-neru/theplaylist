<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title: artist.name }) %>
  <body>
    <div class="container">
      <header>
        <h1><%= artist.name %></h1>
      </header>
      <section class="albums">
        <% artist.albums.forEach(function(album) { %>
          <div class="album-card">
            <h2><%= album.title %></h2>
            <p><%= album.description.trim() %></p>
          </div>
        <% }); %>
      </section>
    </div>
  </body>
</html>